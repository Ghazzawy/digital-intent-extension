{
  "manifest_version": 3,
  "name": "Digital Intent Companion",
  "version": "1.0.0",
  "description": "Track and understand your digital intent with minimal friction.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Digital Intent Companion"
  }
}
